{
  "name": "Noise Thermometer",
  "description": "A visual representation of noise from 'Library' to 'Zoo'.",
  "version": "0.2",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "16": "icon/icon-16.png",
    "48": "icon/icon-48.png",
    "128": "icon/icon-128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "icon/icon-16.png",
      "24": "icon/icon-24.png",
      "32": "icon/icon-32.png"
    }
  },  
  "permissions": [
    "storage",
    "tabs"
  ]
}