  "description": "A visual representation of noise from 'Library' to 'Zoo'.",
  "version": "0.1",
  "manifest_version": 2,
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "icons": { "16": "icon/thermo-16.png", "128": "icon/thermo-128.png" },
